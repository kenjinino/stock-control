<%- model_class = OrderLine -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:product) %>:</strong></dt>
  <dd><%= @order_line.product.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @order_line.quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
  <dd><%=l @order_line.created_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              :back, :class => 'btn'  %>
  <%= link_to( t('.edit', :default => t("helpers.links.edit")),
              edit_order_order_line_path(@order_line.order, @order_line), :class => 'btn') %>
  <%= link_to( t('.destroy', :default => t("helpers.links.destroy")),
              order_order_line_path(@order_line.order, @order_line),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger') %>
</div>

